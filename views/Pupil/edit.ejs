<h1>Edit Pupil</h1>
<form action="/pupils/edit/<%= locals.pupil.id %>" method="POST">

	<div><input type='hidden' name='id' value="<%= locals.pupil.id %>"></div>

	<div class='input-group'>
		<label for="name">Name: </label>
		<input id="name" class='form-control' name="name" type="text" value="<%= locals.pupil.name %>" /><br/>
	</div>

	<div class='input-group'>
		<label for="surname">Surname: </label>
		<input id="surname" class='form-control' name="surname" type="text" value="<%= locals.pupil.surname %>" /><br/>
	</div>

	<div class='input-group'>
		<label for="birthdate">Birthdate: </label>
		<input id="birthdate" class='form-control' name="birthdate" type="date" value="<%=: locals.pupil.birthdate | formatDate %>" /><br/>
	</div>

	<div class='input-group'>
		<label for="schoolId">School: </label>
		<select class="form-control" id="schoolId" name="schoolId">
			  <% _.each(locals.schools, function (school) { %>
				  <option <% if (school.id == locals.pupil.school.id ) { %> selected="selected" <% } %> value="<%= school.id %>"><%= school.name %>, <%= school.address.city %>
				  </option>
			  <% }) %>
		</select>
	</div>

	<div class='input-group'>
		<label for="rentalWeight">Weight: </label>
		<input id="rentalWeight" class='form-control' name="rentalWeight" type="number" value="<%= locals.pupil.rental.weight %>" /><br/>
	</div>

	<div class='input-group'>
		<label for="rentalHeight">Height: </label>
		<input id="rentalHeight" class='form-control' name="rentalHeight" type="number" value="<%= locals.pupil.rental.height %>" /><br/>
	</div>


	<div class='input-group'>
		<label for="email">Email: </label>
		<input id="email" class='form-control' name="contactEmail" type="email" value="<%= locals.pupil.contact.email %>" /><br/>
	</div>

	<div class='input-group'>
		<label for="phone">contactPhone: </label>
		<input id="phone" class='form-control' name="contactPhone" type="tel" value="<%= locals.pupil.contact.phone %>" /><br/>
	</div>

	<input class='btn btn-primary' type="submit"/>

    <a class='btn btn-default' href="/pupils">Back</a>
</form>

<h1>Edit Pupil</h1>
<form action="/pupils/edit/<%= data.id %>" method="POST">

	<div><input type='hidden' name='id' value="<%= data.id %>"></div>

	<div>
		<label for="name">Name: </label>
		<input id="name" class='form-control' name="name" type="text" value="<%= data.name %>" /><br/>
	</div>

	<div class='input-group'>
		<label for="surname">Surname: </label>
		<input id="surname" class='form-control' name="surname" type="text" value="<%= data.surname %>" /><br/>
	</div>

	<div class='input-group'>
		<label for="birthdate">Birthdate: </label>
		<input id="birthdate" class='form-control' name="birthdate" type="date" value="<%=: data.birthdate | formatDate %>" /><br/>
	</div>

	<div class='input-group'>
		<label for="rentalWeight">Weight: </label>
		<input id="rentalWeight" class='form-control' name="rentalWeight" type="number" value="<%= data.rental.weight %>" /><br/>
	</div>

	<div class='input-group'>
		<label for="rentalHeight">Height: </label>
		<input id="rentalHeight" class='form-control' name="rentalHeight" type="number" value="<%= data.rental.height %>" /><br/>
	</div>


	<div class='input-group'>
		<label for="email">Email: </label>
		<input id="email" class='form-control' name="contactEmail" type="email" value="<%= data.contact.email %>" /><br/>
	</div>

	<div class='input-group'>
		<label for="phone">contactPhone: </label>
		<input id="phone" class='form-control' name="contactPhone" type="tel" value="<%= data.contact.phone %>" /><br/>
	</div>

	<input class='btn btn-primary' type="submit"/>

    <a class='btn btn-default' href="/pupils">Back</a>
</form>

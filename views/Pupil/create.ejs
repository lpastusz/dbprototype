<h1>Create Pupil</h1>
<form action="/pupils/create" method="POST">

	<div class='input-group'>
		<label for="name">Name: </label>
		<input id="name" class='form-control' name="name" required type="text" /> <br/>
	</div>

	<div class='input-group'>
		<label for="surname">Surname: </label>
		<input id="surname" class='form-control' name="surname" required type="text" /> <br/>
	</div>

	<div class='input-group'>
		<label for="birthdate">Birthdate: </label>
		<input id="birthdate" class='form-control' name="birthdate" required type="date" /> <br/>
	</div>

	<div class='input-group'>
		<label for="schoolId">School: </label>
		<select class="form-control" id="schoolId" name="schoolId">
			  <% _.each(locals.schools, function (school) { %>
				  <option value="<%= school.id %>"><%= school.name %>, <%= school.address.city %>
				  </option>
			  <% }) %>
		</select>
	</div>

	<div class='input-group'>
		<label for="rentalWeight">Weight: </label>
		<input id="rentalWeight" class='form-control' name="rentalWeight" type="number" /> <br/>
	</div>

	<div class='input-group'>
		<label for="rentalHeight">Height: </label>
		<input id="rentalHeight" class='form-control' name="rentalHeight" type="number" /> <br/>
	</div>


	<div class='input-group'>
		<label for="email">Email: </label>
		<input id="email" class='form-control' name="contactEmail" required type="email" /> <br/>
	</div>

	<div class='input-group'>
		<label for="phone">contactPhone: </label>
		<input id="phone" class='form-control' name="contactPhone" required type="text" /> <br/>
	</div>


	<input class='btn btn-primary' type="submit"/>

    <a class='btn btn-default' href="/pupils">Back</a>
</form>
